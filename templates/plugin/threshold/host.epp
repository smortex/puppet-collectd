<Host "<%= $host['name'] %>">
  <%- $host['plugins'].each |$plugin| { -%>
<%= collectd::indent(epp('collectd/plugin/threshold/plugin.epp', { plugin => $plugin })) -%>
  <%- } -%>
  <%- $host['types'].each |$type| { -%>
<%= collectd::indent(epp('collectd/plugin/threshold/type.epp', { type => $type })) -%>
  <%- } -%>
</Host>
